<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/Cities"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Пожалуйста, введите города отправления и прибытия"
        android:textSize="20sp"
        android:layout_gravity="center"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center">

        <Spinner
            android:id="@+id/flyout"
            android:layout_width="wrap_content"
            android:layout_height="40sp"
            android:entries="@array/cities"
            android:textSize="30sp" />

        <Spinner
            android:id="@+id/flyin"
            android:layout_width="wrap_content"
            android:layout_height="40sp"
            android:textSize="30sp"
            android:entries="@array/cities" />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="                          "/>

    <TextView
        android:id="@+id/Dates"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Пожалуйста, введите даты отправления и прибытия"
        android:textSize="20sp"
        android:layout_gravity="center" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center">

        <EditText
            android:id="@+id/DateOut"
            android:layout_width="wrap_content"
            android:layout_height="40sp"
            android:hint="Дата Отправления"
            android:inputType="date" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:text="                 " />

        <EditText
            android:id="@+id/DateIn"
            android:layout_width="wrap_content"
            android:layout_height="40sp"
            android:hint="Дата прибытия"
            android:inputType="date" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="                          "/>

    <TextView
        android:id="@+id/Passengers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Пожалуйста, введите количество пассажиров"
        android:textSize="20sp"
        android:layout_gravity="center"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center">

        <EditText
            android:id="@+id/PassengersAdult"
            android:layout_width="wrap_content"
            android:layout_height="40sp"
            android:inputType="textPersonName"
            android:hint="Взрослые" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="                 "/>

        <EditText
            android:id="@+id/PassengersChildren"
            android:layout_width="wrap_content"
            android:layout_height="40sp"
            android:inputType="textPersonName"
            android:hint="Дети" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="                 "/>

        <EditText
            android:id="@+id/PassengersInfants"
            android:layout_width="wrap_content"
            android:layout_height="40sp"
            android:inputType="textPersonName"
            android:hint="Младенцы" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="462dp"
        android:layout_height="wrap_content">

        <Button
            android:layout_width="411dp"
            android:layout_height="74dp"
            android:text="Найти билеты" />
    </LinearLayout>
</LinearLayout>
